{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2020"],

    "outDir": "./bin",
    "rootDir": "src",

    "strict": true,
    "noImplicitAny": true,

    "strictPropertyInitialization": false,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["config/*"]
    },

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
